#include <stdio.h>

int main() {
    int n, suma = 0;

    // Solicitar al usuario que ingrese el valor de n
    printf("Ingrese el valor de n: ");
    scanf("%d", &n);

    // Calcular la suma de los primeros n n√∫meros naturales
    for (int i = 1; i <= n; i++) {
        suma += i;
    }

    // Mostrar la suma
    printf("La suma de los primeros %d numeros naturales es: %d\n", n, suma);

    return 0;
}
